{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Clean",
			"type": "shell",
			"command": "flutter",
			"args": [
				"clean"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Get Dependencies",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}